<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/width0dp</item>
        <item name="android:layout_height">@dimen/imageheight</item>
        <item name="android:layout_weight">4</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="IconButtonStyle">
        <item name="android:layout_width">@dimen/iconwidth</item>
        <item name="android:layout_height">@dimen/height0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
